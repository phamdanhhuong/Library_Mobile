<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_reservation_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/onPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="library"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_layout_gray"
        android:padding="16dp"
        android:layout_margin="2dp">

    <!-- Cột 1: Ảnh -->
    <ImageView
        android:id="@+id/img_history"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_profile_book_more"
        android:clipToOutline="true" />

    <!-- Cột 2: Nút và text -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bạn có 35 sách chưa đọc"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="đọc càng nhiều thì càng tốt"
                android:textColor="#2E3731"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_action"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="0pt"
            android:layout_marginBottom="0pt"
            android:background="@drawable/bg_button_see"
            android:contentDescription="TODO" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
