<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/transparent"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Ảnh bìa sách -->
    <ImageView
        android:id="@+id/imgBookCover"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/genre_selected" />

    <!-- Nội dung bên phải ảnh -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unseen world"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by: jamilla francis"
            android:textSize="14sp"
            android:textColor="#A08F8F" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="science"
            android:textSize="12sp"
            android:textColor="#A08F8F" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sara is a little girl who living with her mom. she loves animals. one day when shes playing with her imaginary friend...."
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <!-- Nút xem chi tiết ở góc phải dưới -->
        <Button
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_read"
            android:text="Details"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
