<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onPrimary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fragment Ads -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentAds"
            android:name="com.phamhuong.library.fragment.home.FragmentAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Fragment Explore -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentExplore"
            android:name="com.phamhuong.library.fragment.home.FragmentExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Fragment Recommended -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentRecommended"
            android:name="com.phamhuong.library.fragment.home.FragmentRecommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Fragment Trading -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentTrending"
            android:name="com.phamhuong.library.fragment.home.FragmentTrending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
