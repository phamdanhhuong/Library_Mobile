<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/outline"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/onPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:cardBackgroundColor="@color/onPrimary">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/imgUserAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_login_hide_on"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:contentDescription="user_avatar"/>

        <!-- Nội dung bình luận -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên người dùng, thời gian và số sao -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tên người dùng và thời gian -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên người dùng"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvCommentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 giờ trước"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.5"
                    android:isIndicator="true"
                    android:layout_marginTop="4dp"
                    style="?android:attr/ratingBarStyleSmall"/>

            </LinearLayout>

            <!-- Nội dung bình luận -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCommentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đây là một bình luận mẫu."
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
