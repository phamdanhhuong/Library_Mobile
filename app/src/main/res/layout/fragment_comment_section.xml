<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvCommentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xếp hạng và đánh giá"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- Hiển thị số sao trung bình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvAverageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#d7590c"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp">
            <RatingBar
                android:id="@+id/ratingBarAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:rating="4.5"
                style="?android:attr/ratingBarStyleSmall"/>
            <TextView
                android:id="@+id/tvNumberOfComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="83"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#d7590c"
                android:layout_marginEnd="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Danh sách bình luận -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:scrollbars="vertical"/>

    <!-- Khung nhập bình luận -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- Ảnh đại diện -->
            <ImageView
                android:id="@+id/imgUserAvatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_login_hide_on"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <!-- Ô nhập bình luận -->
            <EditText
                android:id="@+id/edtComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Viết bình luận..."
                android:textColor="#333333"
                android:textSize="14sp"
                android:background="@drawable/rounded_bg"
                android:padding="8dp"/>

            <!-- Nút gửi bình luận -->
            <ImageView
                android:id="@+id/btnSendComment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_comment_send"
                android:contentDescription="Gửi bình luận"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Rating Bar để chọn số sao -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <RatingBar
                android:id="@+id/ratingBarUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="0"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
